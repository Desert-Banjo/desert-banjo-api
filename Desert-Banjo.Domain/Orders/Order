using System.Collections.Generic;
using System.Linq;

namespace Desert.Banjo.Domain.Orders{
    public class Order
{
    public int Id { get; set; }
    public List<OrderItem> Items { get; set; }//should this be Order instead of OrderItem
    public DateTime CreatedDate { get; set}
    public decimal TotalPrice ==> Items.Sum(i ==> i.Price);
}
}